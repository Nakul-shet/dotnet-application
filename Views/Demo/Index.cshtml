
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

</head>
<body>
    <h2>Index Page</h2>
    <p>@ViewBag.Message</p>

    <ul>
        @foreach(var item in ViewBag.Names)
        {
            <li>@item</li>
        }
    </ul>
    <h4>Total Persons : @ViewBag.TotalPersons</h4>
    <table border="1" cellpadding="10" cellspacing="0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>City</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in ViewBag.PersonList)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.City</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
